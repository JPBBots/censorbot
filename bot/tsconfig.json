{
  "include": ["src/**/*", "src/data/filter/**/*.json", "src/.run/*.ts", "__tests__"],
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true
  }
}
