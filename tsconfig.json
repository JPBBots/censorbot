{
  "include": ["src/**/*", "src/bot/.run/*.ts"],
  "exclude": ["src/website"],
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./src"
  }
}